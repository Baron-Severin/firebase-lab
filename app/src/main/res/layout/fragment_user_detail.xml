<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fragment_border"
    android:layout_margin="@dimen/activity_horizontal_margin"
    tools:context="com.severin.baron.firebase_lab.Fragments.UserDetailFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/textView_newUser_userDetailFragment"
        android:text="User information not found!" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:minWidth="@dimen/editText_minWidth"
        android:hint="Display Name"
        android:gravity="center" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/rounded_button"
        android:text="Save Information"
        />

</LinearLayout>
